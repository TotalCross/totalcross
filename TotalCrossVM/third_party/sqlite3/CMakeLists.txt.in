cmake_minimum_required(VERSION 2.8.2)

include(ExternalProject)

project(SQLite3)

ExternalProject_Add(SQLite3
    URL https://sqlite.org/2016/sqlite-amalgamation-3130000.zip
    SOURCE_DIR "${CMAKE_CURRENT_BINARY_DIR}/sqlite3/src"
    UPDATE_COMMAND ""
    PATCH_COMMAND patch -p0 <  ${CMAKE_CURRENT_LIST_DIR}/sqlite3/sqlite3tc.patch
    CONFIGURE_COMMAND ""
    BUILD_COMMAND ""
    INSTALL_COMMAND ""
    TEST_COMMAND ""
)
