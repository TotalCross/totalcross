[Version]

Signature	= "$Windows NT$"
Provider	   = "TotalCross"
CESignature	= "$Windows CE$"

[CEStrings]

AppName = "VM"
InstallDir = "\TotalCross"

[Strings]

;==================================================

[CEDevice.HPC2000_ARM]
ProcessorType   = 2577
VersionMin = 3.0
VersionMax = 4.0
UnsupportedPlatforms = "Palm PC"

[CEDevice.HPC211_ARM]
ProcessorType   = 2577
VersionMin = 2.11
VersionMax = 2.11
UnsupportedPlatforms = "Palm PC"

[CEDevice.PocketPC_ARM]
;ProcessorType   = 2577
VersionMin = 3.0
VersionMax = 6.99
UnsupportedPlatforms = "HPC","Jupiter"
BuildMax=0xE000000

[CEDevice.WMOBILE_ARM]
;ProcessorType   = 2577
VersionMin = 3.0
VersionMax = 6.99
