[SourceDisksNames.PocketPC_ARM]
1 =, "Binaries",,..\..\..\..\..\output\release\TotalCrossSDK\dist\vm\wince\PocketPC\ARM
[SourceDisksNames.PocketPC_MIPS]
1 =, "Binaries",,..\..\..\..\..\output\release\TotalCrossSDK\dist\vm\wince\PocketPC\MIPS
[SourceDisksNames.PocketPC_SH3]
1 =, "Binaries",,..\..\..\..\..\output\release\TotalCrossSDK\dist\vm\wince\PocketPC\SH3
[SourceDisksNames.WMOBILE_ARM]
1 =, "Binaries",,..\..\..\..\..\output\release\TotalCrossSDK\dist\vm\wince\ARM

[SourceDisksFiles]

tcvm.dll   = 1
TCBase.tcz = 2
TCUI.tcz   = 2
